<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Logging_app" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">#ffffffff</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ultra_violet</item>
        <item name="colorPrimaryVariant">@color/mauve</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/colorPrimaryVariant</item>
        <item name="colorSecondaryVariant">@color/tropical_indigo</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
<!--
     A minimal theme that sets almost everything to transparent or minimal.
     We must still inherit from an AppCompat parent.
 -->
    <style name="Theme.AppCompatMinimal" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Remove action bar, if any -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <!--
             Optionally remove other styled attributes, or set text colors to default, etc.
         -->
    </style>
</resources>
